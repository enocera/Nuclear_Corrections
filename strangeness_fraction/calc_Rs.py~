#! /usr/bin/env python

import lhapdf
import numpy as np
import sys
from math import sqrt
import matplotlib.pyplot as plt

# Reading in command line arguments
pdfset      = str(sys.argv[1])
x           = 0.023
Q           = sqrt(1.9)

# Reading in PDF sets
p           = lhapdf.mkPDF(pdfset, 0)
pdfs        = lhapdf.mkPDFs(pdfset)

# Calculating Rs
s           = p.xfxQ(3,  x, Q)
sbar        = p.xfxQ(-3, x, Q)
ubar        = p.xfxQ(-2, x, Q)
dbar        = p.xfxQ(2,  x, Q)

Rs          = (s + sbar)/(ubar + dbar)

print("Rs for PDF set {0}:  ".format(pdfset) + str(Rs))
